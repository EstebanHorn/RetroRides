---
import Layout from "../../layouts/Layout.astro";
import { obtenerDatosPorAnio } from "../../services/cars.js";
import "@fontsource-variable/tourney";
const { car } = Astro.params;

const Auto = obtenerDatosPorAnio(car);
---

<Layout title={`RetroRides ${car}`}>
	<main>
		<div class="title">
			<h2>
				{Auto?.nombre}
			</h2>
		</div>
		<section>
			<ul>
				<li>
					{Auto.caracteristicas.motor}
				</li>
				<li>
					{Auto.caracteristicas.transmision}
				</li>
				<li>
					{Auto.caracteristicas.traccion}
				</li>
				<li>
					{Auto.caracteristicas.chasis}
				</li>
				<li>
					{Auto.caracteristicas.carroceria}
				</li>
			</ul>

			<div class="container">
				<img src=`/cars/${Auto.anio}-model.png` />
			</div>
		</section>
	</main>
</Layout>

<style>
	.title {
		display: flex;
		justify-items: center;
		align-items: center;
		gap: 10px;
	}

	.title img {
		width: 60px;
		height: 60px;
	}

	ul {
		display: flex;
		flex-direction: column;
		list-style: circle;
		font-family: monospace;
		font-size: 20px;
		gap: 10px;
		background: rgba(255, 255, 255, 0.5);
		padding: 30px;
		border-radius: 5%;
		width: 50%;
	}



	section {
		display: flex;
		justify-content: space-between;
		align-items: center;
		width: 100%;
	}

	h2 {
		font-family: "Tourney Variable", sans-serif;
		color: #fff;
		font-size: 50px;
	}

	img {
		width: 100%;
	}

	.container {
		width: 40%;
	}

	main {
		background: rgb(195, 195, 195);
		background: linear-gradient(
			156deg,
			rgba(195, 195, 195, 1) 0%,
			rgba(244, 244, 244, 1) 50%,
			rgba(233, 233, 233, 1) 100%
		);
		width: 75%;
		padding: 20px;
		margin: 40px;
		border-radius: 2%;
		-webkit-box-shadow: 0px 20px 24px -6px rgba(0, 0, 0, 0.75);
		-moz-box-shadow: 0px 20px 24px -6px rgba(0, 0, 0, 0.75);
		box-shadow: 0px 20px 24px -6px rgba(0, 0, 0, 0.75);
		animation: zoomOutRight 1s ease-in-out;
	}

	@keyframes zoomOutRight {
		from {
			opacity: 0;
			transform: scale(0.5) translateX(2000px);
		}
		to {
			opacity: 1;
			transform: scale(1) translateX(0);
		}
	}

	@media screen and (max-width: 1000px) {
		ul {
			font-size: 15px;
			width: 70%;
		}

		section {
			flex-direction: column;
		}

		.container{
			width: 80%;
		}

		h2{
			font-size: 35px;
		}

		@keyframes zoomOutRight {
		from {
			opacity: 0;
			transform: scale(0.5) translatey(1000px);
		}
		to {
			opacity: 1;
			transform: scale(1) translatey(0);
		}
	}
	}

</style>
