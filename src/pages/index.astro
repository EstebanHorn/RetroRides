---
import Layout from "../layouts/Layout.astro";
import "@fontsource-variable/tourney";
---

<Layout title="RetroRides ">
	<main>
		<h1>
			Autos Historicos
		</h1>
		<img src="/banner.png" />
	</main>
</Layout>

<style>
	main {
		background: rgb(195, 195, 195);
		background: linear-gradient(
			156deg,
			rgba(195, 195, 195, 1) 0%,
			rgba(244, 244, 244, 1) 50%,
			rgba(233, 233, 233, 1) 100%
		);
			width: 75%;
		padding: 20px;
		margin: 40px;
		height:60%;
		border-radius: 2%;
		-webkit-box-shadow: 0px 20px 24px -6px rgba(0, 0, 0, 0.75);
		-moz-box-shadow: 0px 20px 24px -6px rgba(0, 0, 0, 0.75);
		box-shadow: 0px 20px 24px -6px rgba(0, 0, 0, 0.75);
		display: flex;
		flex-direction: column;
	}


	img{
		width: 60%;
		align-self: flex-end;
				
	}

	h1{
		font-family: "Tourney Variable", sans-serif;
		font-size: 4rem;
	}

	@media screen and (max-width: 1000px) {
		h1{
			font-size: 3rem;
		}
		img{
			width: 100%;
			align-self: flex-end;
		}
		main{
			justify-content: space-between;
		}
	}
</style>
